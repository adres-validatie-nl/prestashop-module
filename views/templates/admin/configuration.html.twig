{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    {% if (progress != null) %}
        {% include '@Modules/adresvalidatie/views/templates/admin/import_status.html.twig' %}
    {% endif %}

    {% include '@Modules/adresvalidatie/views/templates/admin/account_status.html.twig' %}

    {% include '@Modules/adresvalidatie/views/templates/admin/subscription.html.twig' %}

    {% include '@Modules/adresvalidatie/views/templates/admin/account_settings_form.html.twig' %}
{% endblock %}

{% block javascripts %}
    {% if (progress != null) %}
        <script src="{{ asset('../modules/adresvalidatie/views/js/admin/import_status.js') }}"></script>
        <script>
            document.adresvalidatie_async_polling_endpoint = "{{ progress['polling_endpoint'] }}";
            pollImportProgress();
        </script>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {% if (progress != null) %}
        <link rel="stylesheet" href="{{ asset('../modules/adresvalidatie/views/css/admin/import_status.css') }}" type="text/css" media="all">
    {% endif %}
{% endblock %}
